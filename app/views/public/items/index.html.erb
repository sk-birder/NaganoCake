<div class="row d-flex justify-content-center">
  <div class="col-2">
    ジャンル検索
  </div>
  <div class="col-8">
    <h2>商品一覧</h2>
    <div class="row">
      <% @items.each do |item| %>
        <div class="col-3 d-flex flex-column">
          <%= link_to item_path(item), class: "d-flex flex-column" do %>
            <%= image_tag item.get_image(100,100), class: 'd-block mx-auto' %>
            <span><%= item.name %></span>
          <% end %>
          <span><%= item.price_with_tax %></span>
        </div>
      <% end %>
    </div>
    <div class="d-flex justify-content-center">
      <%= paginate @items %>
    </div>
  </div>
</div>