<!DOCTYPE html>
<html>
  <head>
    <title>ながのCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
    <nav class="navbar navbar-expand-lg" style="background-color:#ffffaa">
      <div class="container">
        <div class="row">
          <div class="navbar-brand">
            <%= link_to 'ながのCake', public_homes_top_path %>
          </div>
          <div class="dummy">
            <!-- 空白予定地 -->
          </div>
          <div class="nav-link">
            <%= link_to 'About', public_homes_about_path %>
          </div>
          <div class="nav-link">
            <%= link_to '商品一覧', public_items_index_path %>
          </div>
          <div class="nav-link">
            <% if admin_signed_in? %>
              <%= link_to 'ジャンル一覧', admin_genres_index_path %>
            <% elsif customer_signed_in? %>
              <%= link_to 'カート', public_cart_items_index_path %>
            <% else %>
              <%= link_to '新規登録', new_customer_registration_path %>
            <% end %>
          </div>
          <div class="nav-link">
            <% if admin_signed_in? %> <!-- adminとcustomerでサインアウトの中身が異なる -->
              <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete %>
            <% elsif customer_signed_in? %> <!-- adminとcustomerでサインアウトの中身が異なる -->
              <%= link_to 'ログアウト', destroy_customer_session_path, method: :delete %>
            <% else %> <!-- customer用 -->
              <%= link_to 'ログイン', new_customer_session_path %> 
            <% end %>
          </div>
        </div>
      </div>
    </nav>
  </header>
<%= yield %>
  </body>
</html>
