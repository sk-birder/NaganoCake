<div class="row justify-content-around">
  <h2><span class="bg-light px-5">商品一覧</span></h2>
  <p><%= link_to '新規追加', new_admin_item_path %></p>
</div>

<div class="d-flex justify-content-center">
  <table class="table col-8">
    <thead class="bg-light">
      <tr>
        <td>商品ID</td>
        <td>商品名</td>
        <td>税抜価格</td>
        <td>ジャンル</td>
        <td>ステータス</td>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td>
            <%= link_to admin_item_path(item) do %>
              <%= item.name %>
            <% end %>
          </td>
          <td><%= number_with_delimiter(item.price) %></td>
          <td><%= item.genre.name %></td>
          <td>
            <%= item.is_active ? 
              '<span class="text-success">販売中</span>'.html_safe :
              '<span class="text-secondary">販売停止中</span>'.html_safe
            %>
          </td> <!-- 条件演算子（三項演算子）を使用 -->
        </tr>
      <% end %>
    </tbody>
  </table>
</div>